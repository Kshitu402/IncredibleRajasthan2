<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0.5dp"
    android:background="#FFFFFF53"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        app:cardElevation="20dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFF7F7B2"
            android:weightSum="5">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:weightSum="2"
    android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:id="@+id/reviewperson"
                android:layout_margin="10dp"
                android:textColor="#FF090909"
                android:textSize="14sp"
                android:text="hello"
                android:fontFamily="serif" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/reviewcountry"
                android:layout_margin="10dp"
                android:textColor="#FF090909"
                android:textSize="14sp"
                android:text="hello"
                android:fontFamily="serif" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_weight="0.2"
        android:layout_margin="14dp"
        android:textColor="#FF090909"
        android:background="@drawable/germany"
        android:fontFamily="serif"/>
</LinearLayout>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/ratingrest"
                android:progressTint="@color/colorPrimary"
                android:layout_weight="1"
                android:clickable="false"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/restcomment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginTop="14dp"
                android:textSize="18dp"
                android:fontFamily="serif"
                android:gravity="center"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>