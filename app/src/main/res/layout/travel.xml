<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ashwani.incredibleindia.MainActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:elevation="15dp"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:elevation="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    card_view:cardCornerRadius="10dp">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSource"
                        android:background="@drawable/location_button_food_bg"
                        android:drawableLeft="@mipmap/ic_location_on_white_24dp"
                        android:paddingLeft="8dp"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sourceDetail"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="Source Location"
                    android:padding="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:elevation="15dp"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/c1"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:elevation="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                card_view:cardCornerRadius="10dp">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDestination"
                    android:background="@drawable/back_text_view"
                    android:drawableLeft="@mipmap/ic_location_on_white_24dp"
                    android:paddingLeft="8dp"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/destinationDetail"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Destination Location"
                android:padding="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>




    <Button
        android:id="@+id/btnCheckRides"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:text="Check Rides"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
        android:background="@color/black"
        android:textColor="@color/white"/>


</RelativeLayout>
