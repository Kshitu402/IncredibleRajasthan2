<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ashwani.incredibleindia.SelectGuide"
    tools:showIn="@layout/activity_select_guide">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Select Your Guide"
        android:id="@+id/tvSelectYourGuide"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:elevation="15dp"
        card_view:cardCornerRadius="10dp"
        android:backgroundTint="#000000"
        android:id="@+id/kingCard"
        android:layout_below="@+id/tvSelectYourGuide"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="300dp"
            android:src="@drawable/king"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:elevation="15dp"
        card_view:cardCornerRadius="10dp"
        android:backgroundTint="#000000"
        android:id="@+id/queenCard"
        android:layout_below="@+id/tvSelectYourGuide"
        android:layout_toRightOf="@+id/kingCard"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="300dp"
            android:src="@drawable/queen"/>

    </android.support.v7.widget.CardView>




</RelativeLayout>
