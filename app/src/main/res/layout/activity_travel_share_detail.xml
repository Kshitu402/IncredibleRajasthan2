<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.ashwani.incredibleindia.TravelShareDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Your ride is verified...."
        android:gravity="center_horizontal"
        android:textColor="#2ff901"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_text_view3"
        android:padding="5dp"
        android:textSize="30sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/done_scanning"
        android:layout_margin="50dp"
        android:background="#ffff"/>

</LinearLayout>
