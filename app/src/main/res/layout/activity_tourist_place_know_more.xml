<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashwani.incredibleindia.TouristPlaceKnowMore">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/knowMoreTitleCard"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/knowMoreTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Taj Mahal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/knowMoreTitleCard"
        android:layout_above="@+id/knowMoreButton"
        android:scrollbars="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#414545"
            android:id="@+id/knowMoreDetailedText"/>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/knowMoreButton"
        android:text="Start Tour"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:textColor="#ffffff"/>
</RelativeLayout>
